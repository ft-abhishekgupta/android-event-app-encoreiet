<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/imageView13"
        android:src="@drawable/encore"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contact Us -"
        android:textStyle="bold|italic"
        android:id="@+id/textView13"
        android:textColor="@color/mytextc"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp" />



    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout3"
            android:onClick="mfacebook">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView15"
                android:src="@drawable/fb"

                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="https://www.facebook.com/EncoreIET/"
                android:id="@+id/textView15"
                android:onClick="mfacebook"
                android:textColor="@color/mytextc"
                android:layout_gravity="center_vertical"
                android:paddingLeft="30dp"
                android:textSize="18dp"
                android:textIsSelectable="false"
                android:longClickable="false"
                android:clickable="false"
                android:linksClickable="false" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout4"
            android:onClick="mmail"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView37"
                android:src="@drawable/mail"

                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="encoreietlucknow@gmail.com"
                android:id="@+id/textView43"
                android:onClick="mmail"
                android:textColor="@color/mytextc"
                android:layout_gravity="center_vertical"
                android:paddingLeft="30dp"
                android:textSize="18dp"
                android:textIsSelectable="false"
                android:longClickable="false"
                android:clickable="false"
                android:linksClickable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout5"
            android:layout_below="@+id/linearLayout4"
            android:onClick="mwebsite">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView17"
                android:src="@drawable/web"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="https://www.ietencore.com"
                android:id="@+id/textView17"
                android:onClick="mwebsite"
                android:textColor="@color/mytextc"
                android:layout_gravity="center_vertical"
                android:paddingLeft="30dp"
                android:textSize="18dp"
                android:textIsSelectable="false"
                android:longClickable="false"
                android:clickable="false"
                android:linksClickable="false" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:id="@+id/linearLayout7"
            android:layout_below="@+id/linearLayout5"

            android:layout_centerHorizontal="true"
            android:onClick="mmap">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView18"
                android:src="@drawable/map"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Institute of Engineering and Technology, Sitapur Road, Lucknow, Uttar Pradesh 226021"
                android:id="@+id/textView18"
                android:onClick="mmap"
                android:textColor="@color/mytextc"
                android:layout_gravity="center_vertical"
                android:paddingLeft="30dp"
                android:textSize="18dp"
                android:textIsSelectable="false"
                android:longClickable="false"
                android:clickable="false"
                android:linksClickable="false" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:layout_below="@+id/linearLayout7"
            android:layout_centerHorizontal="true"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hospitality Team -"
            android:textStyle="bold|italic"
            android:id="@+id/textView3"
            android:textColor="@color/mytextc"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Nirmal Sharma\n(+91-9412852890)"
                android:id="@+id/textView4"
                android:textColor="@color/mytextc"
                android:paddingTop="10dp"
                android:onClick="mhos1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Himanshu Premi\n(+91-7071042327)"
                android:id="@+id/textView5"
                android:textColor="@color/mytextc"
                android:paddingTop="10dp"
                android:onClick="mhos2"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
    </ScrollView>