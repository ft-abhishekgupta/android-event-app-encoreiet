<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Designed and Developed by -"
        android:id="@+id/textView19"
        android:textColor="@color/mytextc"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:textStyle="normal|italic" />

    <ImageView
        android:id="@+id/imageView19"
        android:src="@drawable/dev"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:layout_width="170dp"
        android:layout_height="170dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Abhishek Gupta"
        android:id="@+id/textView20"
        android:layout_below="@+id/imageView19"
        android:layout_centerHorizontal="true"
        android:textColor="@color/mytextc"
        android:layout_marginTop="20dp"
        android:textStyle="normal|bold|italic"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CS 3rd Year , IET"
        android:id="@+id/textView21"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true"
        android:textColor="@color/mytextc"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="+91-8604620958"
        android:id="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:textColor="@color/mytextc"
        android:textSize="18dp"
        android:layout_below="@+id/textView21"
        android:textIsSelectable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ft.abhishekgupta@gmail.com"
        android:id="@+id/textView26"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:textColor="@color/mytextc"
        android:textSize="18dp"
        android:textIsSelectable="true" />



</RelativeLayout>